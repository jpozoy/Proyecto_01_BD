@page
<link rel="stylesheet" href="/css/styles.css">

<div class="container">
    <h2>Modificar Usuario</h2>

    <!-- Lista de usuarios para seleccionar -->
    <form method="get">
        <label for="cedula">Selecciona un usuario:</label>
        <select id="cedula" name="cedula">
            <option value="001">Juan Pérez (001)</option>
            <option value="002">María García (002)</option>
            <!-- Aquí puedes agregar más usuarios dinámicamente -->
        </select>
        <button type="submit">Cargar Usuario</button>
    </form>

    <hr />

    <!-- Formulario para modificar usuario -->
    <form method="post">
        <div>
            <label for="cedula">Cédula:</label>
            <input type="text" id="cedula" name="cedula" value="001" readonly />
        </div>
        <div>
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" value="Juan Pérez" required />
        </div>
        <div>
            <label for="puesto">Puesto:</label>
            <input type="text" id="puesto" name="puesto" value="Gerente" required />
        </div>
        <div>
            <label for="departamento">Departamento:</label>
            <input type="text" id="departamento" name="departamento" value="Ventas" required />
        </div>
        <div>
            <label for="rol">Rol:</label>
            <input type="text" id="rol" name="rol" value="Admin" required />
        </div>
        <div>
            <label for="salario">Salario:</label>
            <input type="number" id="salario" name="salario" value="2500.00" step="0.01" required />
        </div>
        <div>
            <label for="fechaIngreso">Fecha de Ingreso:</label>
            <input type="date" id="fechaIngreso" name="fechaIngreso" value="2020-01-15" required />
        </div>
        <button type="submit">Modificar Usuario</button>
    </form>
</div>
