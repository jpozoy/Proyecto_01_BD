@page
<link rel="stylesheet" href="/css/styles.css">

<div class="container">
    <h2>Modificar Usuario</h2>

    <!-- Lista de usuarios para seleccionar -->
    <form method="get">
        <label for="cedula">Selecciona un usuario:</label>
        <select id="cedula" name="cedula">
            <option value="001">Juan Pérez (001)</option>
            <option value="002">María García (002)</option>
            <!-- Aquí puedes agregar más usuarios dinámicamente -->
        </select>
        <button type="submit">Cargar Usuario</button>
    </form>

    <hr />

    <!-- Formulario para modificar usuario -->
    <div class="form-usuario">
        <form method="post">
            <!-- Cédula (solo lectura) -->
            <div class="form-group">
                <label for="cedula">Cédula:</label>
                <input type="text" id="cedula" name="cedula" class="form-input" value="001" readonly />
            </div>

            <!-- Nombre -->
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" name="nombre" class="form-input" value="Juan Pérez" required />
            </div>

            <!-- Puesto -->
            <div class="form-group">
                <label for="puesto">Puesto:</label>
                <input type="text" id="puesto" name="puesto" class="form-input" value="Gerente" required />
            </div>

            <!-- Departamento -->
            <div class="form-group">
                <label for="departamento">Departamento:</label>
                <input type="text" id="departamento" name="departamento" class="form-input" value="Ventas" required />
            </div>

            <!-- Rol -->
            <div class="form-group">
                <label for="rol">Rol:</label>
                <input type="text" id="rol" name="rol" class="form-input" value="Admin" required />
            </div>

            <!-- Salario -->
            <div class="form-group">
                <label for="salario">Salario:</label>
                <input type="number" id="salario" name="salario" class="form-input" value="2500.00" step="0.01" required />
            </div>

            <!-- Fecha de Ingreso -->
            <div class="form-group">
                <label for="fechaIngreso">Fecha de Ingreso:</label>
                <input type="date" id="fechaIngreso" name="fechaIngreso" class="form-input" value="2020-01-15" required />
            </div>

            <!-- Botón de modificar usuario -->
            <div class="form-group">
                <button type="submit" class="form-button">Modificar Usuario</button>
            </div>
        </form>
    </div>
</div>
