@page
@functions {
    public class Usuario

    {

        public string Cedula { get; set; }

        public string Nombre { get; set; }

        public string Puesto { get; set; }

        public string Departamento { get; set; }

        public string Rol { get; set; }

        public decimal Salario { get; set; }

        public DateTime Fecha_Ingreso { get; set; }

    }



    public List<Usuario> Usuarios { get; set; } = new List<Usuario>();



    public void OnGet()

    {

        // Cargar datos de ejemplo si es necesario

    }



    public void OnPost(string cedula, string nombre, string puesto, string departamento, string rol, decimal salario, DateTime fechaIngreso)

    {

        Usuarios.Add(new Usuario
            {
                Cedula = cedula,
                Nombre = nombre,
                Puesto = puesto,
                Departamento = departamento,
                Rol = rol,
                Salario = salario,
                Fecha_Ingreso = fechaIngreso
            });

    }
}

<link rel="stylesheet" href="/css/styles.css">

<div class="container">
    <h2>Agregar Usuario</h2>

    <div class="form-usuario">
        <form method="post">
            <!-- Cédula -->
            <div class="form-group">
                <label for="cedula">Cédula:</label>
                <input type="text" id="cedula" name="cedula" class="form-input" required />
            </div>

            <!-- Nombre -->
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" name="nombre" class="form-input" required />
            </div>

            <!-- Puesto -->
            <div class="form-group">
                <label for="puesto">Puesto:</label>
                <input type="text" id="puesto" name="puesto" class="form-input" required />
            </div>

            <!-- Departamento -->
            <div class="form-group">
                <label for="departamento">Departamento:</label>
                <input type="text" id="departamento" name="departamento" class="form-input" required />
            </div>

            <!-- Rol -->
            <div class="form-group">
                <label for="rol">Rol:</label>
                <input type="text" id="rol" name="rol" class="form-input" required />
            </div>

            <!-- Salario -->
            <div class="form-group">
                <label for="salario">Salario:</label>
                <input type="number" id="salario" name="salario" class="form-input" step="0.01" required />
            </div>

            <!-- Fecha de Ingreso -->
            <div class="form-group">
                <label for="fechaIngreso">Fecha de Ingreso:</label>
                <input type="date" id="fechaIngreso" name="fechaIngreso" class="form-input" required />
            </div>

            <!-- Botón de agregar usuario -->
            <div class="form-group">
                <button type="submit" class="form-button">Agregar Usuario</button>
            </div>
        </form>
    </div>
</div>
