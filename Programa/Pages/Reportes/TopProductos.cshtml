@page
@model Proyecto_01_BD.Pages.Reportes.TopProductosModel
@using Proyecto_01_BD.Clases;

@{
    // Instancia del objeto de reporte
    Reportes reportes = new Reportes();

    // Obtener los datos del reporte
    List<Dictionary<string, object>> productosMasVendidos = reportes.TopProductosMasVendidos();
}

<h1>Top 10 de Productos Más Vendidos</h1>

<table border="1" style="width:100%; border-collapse: collapse; text-align: left;">
    <thead>
        <tr>
            <th>Código de Artículo</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>
                Cantidad Vendida
                <a href="?sortOrder=asc">▲</a>
                <a href="?sortOrder=desc">▼</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (productosMasVendidos.Count > 0)
        {
            foreach (var producto in productosMasVendidos)
            {
                <tr>
                    <td>@producto["Codigo_Articulo"]</td>
                    <td>@producto["Nombre_Articulo"]</td>
                    <td>@producto["Descripcion"]</td>
                    <td>@producto["CantidadVendida"]</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No se encontraron resultados.</td>
            </tr>
        }
    </tbody>
</table>
