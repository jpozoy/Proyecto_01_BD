@page
@using Proyecto_01_BD.Clases;
@{
    // Crear una instancia de la clase Reportes
    Reportes reportes = new Reportes();

    // Obtener las tareas más antiguas
    List<Dictionary<string, object>> tareasMasAntiguas = reportes.ObtenerTareasMasAntiguas();
}

<h1>Top 15 Tareas Más Antiguas</h1>

<table border="1" style="width:100%; border-collapse: collapse; text-align: left;">
    <thead>
        <tr>
            <th>Código de Tarea</th>
            <th>Nombre de la Tarea</th>
            <th>Descripción</th>
            <th>Código de Referencia</th>
            <th>Fecha de Inicio</th>
            <th>Fecha de Fin</th>
        </tr>
    </thead>
    <tbody>
        @if (tareasMasAntiguas.Count > 0)
        {
            foreach (var tarea in tareasMasAntiguas)
            {
                <tr>
                    <td>@tarea["Codigo_Tarea"]</td>
                    <td>@tarea["Nombre_Tarea"]</td>
                    <td>@tarea["Decripcion_Tarea"]</td>
                    <td>@tarea["Codigo_Referencia"]</td>
                    <td>@tarea["Fecha_Inicio"]</td>
                    <td>@tarea["Fecha_Fin"]</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No se encontraron tareas.</td>
            </tr>
        }
    </tbody>
</table>
